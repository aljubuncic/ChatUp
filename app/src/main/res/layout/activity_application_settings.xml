<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:id="@+id/layout"
    tools:context=".ApplicationSettingsActivity">

  <ImageView
      android:id="@+id/backArrow"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_marginLeft="7dp"
      android:src="@drawable/leftarrow"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/text1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Veće profilne slike"
      android:layout_marginLeft="25dp"
      android:layout_marginTop="20dp"
      android:textSize="20sp"
      android:textStyle="bold"
      android:textColor="@color/white"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/backArrow"/>

  <Switch
      android:id="@+id/increasePhotos"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="25dp"
      android:layout_marginRight="25dp"
      app:layout_constraintTop_toBottomOf="@id/backArrow"
      tools:ignore="UseSwitchCompatOrMaterialXml" />

  <TextView
      android:id="@+id/text2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Veći tekst"
      android:layout_marginLeft="25dp"
      android:layout_marginTop="35dp"
      android:textSize="20sp"
      android:textStyle="bold"
      android:textColor="@color/white"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/increasePhotos"/>

  <SeekBar
      android:id="@+id/increaseTextsize"
      style="@style/Widget.AppCompat.SeekBar.Discrete"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="25dp"
      android:layout_marginRight="25dp"
      android:layout_marginTop="10dp"
      android:max="2"
      android:progress="0"
      app:layout_constraintStart_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/text2"/>

  <TextView
      android:id="@+id/text3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Tema aplikacije"
      android:layout_marginLeft="25dp"
      android:layout_marginTop="45dp"
      android:textSize="20sp"
      android:textStyle="bold"
      android:textColor="@color/white"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/increaseTextsize" />

  <LinearLayout
      android:id="@+id/layout1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:gravity="center"
      app:layout_constraintTop_toBottomOf="@id/text3">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/yellow"
        android:src="@drawable/yellow"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="1dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/orange"
        android:src="@drawable/orange"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="1dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/red"
        android:src="@drawable/red"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="1dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/lightred"
        android:src="@drawable/lightred"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"/>

  </LinearLayout>

  <LinearLayout
      android:id="@+id/layout2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:gravity="center"
      app:layout_constraintTop_toBottomOf="@id/layout1">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/darkpink"
        android:src="@drawable/darkpink"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="1dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/lightpink"
        android:src="@drawable/lightpink"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="1dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/purple"
        android:src="@drawable/purple"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="1dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/darkblue"
        android:src="@drawable/darkblue"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"/>

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:gravity="center"
      app:layout_constraintTop_toBottomOf="@id/layout2">

  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="65dp"
      android:layout_height="65dp"
      android:id="@+id/lightblue"
      android:src="@drawable/lightblue"
      app:civ_border_color="#FFFFFF"
      app:civ_border_width="1dp"
      android:layout_marginLeft="10dp"
      app:layout_constraintTop_toTopOf="parent"/>

  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="65dp"
      android:layout_height="65dp"
      android:id="@+id/lightgreen"
      android:src="@drawable/lightgreen"
      app:civ_border_color="#FFFFFF"
      app:civ_border_width="1dp"
      android:layout_marginLeft="25dp"
      app:layout_constraintTop_toTopOf="parent"/>

  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="65dp"
      android:layout_height="65dp"
      android:id="@+id/darkgreen"
      android:src="@drawable/darkgreen"
      app:civ_border_color="#FFFFFF"
      app:civ_border_width="1dp"
      android:layout_marginLeft="25dp"
      app:layout_constraintTop_toTopOf="parent"/>

  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="65dp"
      android:layout_height="65dp"
      android:id="@+id/gray"
      android:src="@drawable/gray"
      app:civ_border_color="#FFFFFF"
      app:civ_border_width="1dp"
      android:layout_marginLeft="25dp"
      android:layout_marginRight="10dp"
      app:layout_constraintTop_toTopOf="parent"/>

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>